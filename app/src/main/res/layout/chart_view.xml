<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
       android:layout_height="match_parent">

    <TextView
            android:id="@+id/chart_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Followers"
            android:textColor="#3896d4"/>

    <ru.smityukh.tchart.view.ChartMainView
            android:id="@+id/chart_main"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="300dp"/>

    <ru.smityukh.tchart.view.ChartPeriodView
            android:id="@+id/chart_period"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="50dp"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/chart_selector"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

</merge>